@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to BookWorld</h2>
@if (!User.Identity?.IsAuthenticated ?? true)
{
    <p>Please <a asp-area="" asp-controller="Account" asp-action="Login">login</a> to access the admin panel or user dashboard.</p>
}
else
{
    <p>You are logged in! <a asp-action="Dashboard">Go to Dashboard</a></p>
}