@using BookWorld.DTOs
@model List<BookDTO>

@{
    ViewData["Title"] = "Book List";
}

<h2>Book List</h2>
<link rel="stylesheet" href="~/css/booklist.css" asp-append-version="true" />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genres</th>
                    <th>Best Seller</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.AuthorName</td>
                        <td>@string.Join(", ", book.Genres ?? new List<string>())</td>
                        <td>@(book.IsBestSeller ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No books available.</p>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}